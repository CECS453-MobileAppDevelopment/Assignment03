<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:padding="10dp"
        android:background="@drawable/dialog_bg">

        <TextView
            android:id="@+id/dialog_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error!"
            android:layout_marginStart="10dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FF0000"/>

        <TextView
            android:id="@+id/dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_heading"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="No results found, try searching again with a valid address."
            android:textSize="18sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/dialog_action_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_centerHorizontal="true"
            android:text="OK"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/mapboxBlue"/>

    </RelativeLayout>

</RelativeLayout>